.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-section {
  margin-bottom: 60rpx;
  text-align: center;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  width: 100%;
}

.login-form {
  width: 100%;
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 20rpx;
}

.input-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

input {
  flex: 1;
  font-size: 28rpx;
}

.error-msg {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.login-btn {
  width: 100%;
  margin-top: 40rpx;
  background: #FF9FB3;
  color: white;
  border-radius: 8rpx;
}

.register-link {
  text-align: center;
  font-size: 26rpx;
  color: #FF9FB3;
  margin-top: 20rpx;
}

.third-party-login {
  width: 100%;
  margin-top: 60rpx;
}

.divider {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.login-methods {
  display: flex;
  justify-content: center;
}

.login-method {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.method-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.method-name {
  font-size: 24rpx;
  color: #666;
} 