.container {
  padding: 30rpx;
  background: #f8f9fd;
}

.form-group {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 36rpx;
}

.label {
  display: block;
  margin-bottom: 16rpx;
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fd;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border: none;
}

.textarea {
  width: 100%;
  height: 180rpx;
  background: #f8f9fd;
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border: none;
}

.member-input {
  display: flex;
  gap: 20rpx;
}

.add-btn {
  min-width: 160rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  background: #ffb6c1;
  color: #fff;
  border-radius: 44rpx;
  padding: 0 30rpx;
  border: none;
}

.members-list {
  margin-top: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #e3f2fd;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.delete-btn {
  color: #ff8a9e;
  font-size: 36rpx;
  margin-left: 16rpx;
}

.submit-btn {
  margin-top: 48rpx;
  width: 100%;
  height: 88rpx;
  padding-top: 20rpx;
  background: #ffb6c1;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 6rpx 16rpx rgba(255, 182, 193, 0.3);
}

/* 添加输入框焦点样式 */
.input:focus, .textarea:focus {
  box-shadow: 0 0 0 4rpx rgba(255, 182, 193, 0.2);
}

/* 按钮点击效果 */
.add-btn:active, .submit-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
} 