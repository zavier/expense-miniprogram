.container {
  padding: 0;
  background: #F8F9FD;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.form-card {
  background: #fff;
  margin: 24rpx 0;
  padding: 32rpx 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.form-content {
  width: 100%;
}

.form-item {
  width: 100%;
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #F7F8FA;
  border-radius: 16rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  display: block;
}

.form-input.picker {
  line-height: 88rpx;
}

.form-input.placeholder {
  color: #999;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  background: #F7F8FA;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.member-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.member-tag {
  padding: 16rpx 32rpx;
  background: rgba(247, 248, 250, 0.8);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.member-tag.selected {
  background: rgba(255, 159, 179, 0.1);
  color: #FF9FB3;
}

.submit-btn {
  width: calc(100% - 80rpx);
  height: 88rpx;
  background: #FF9FB3;
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
  border: none;
  margin: 24rpx 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 159, 179, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
}

.back-to-select {
  margin-top: 16rpx;
  color: #FF9FB3;
  font-size: 26rpx;
  text-align: right;
  padding: 8rpx 0;
}

.back-to-select:active {
  opacity: 0.8;
}

/* 添加金额输入相关样式 */
.amount-input-container {
  display: flex;
  align-items: center;
  background: #F7F8FA;
  border-radius: 16rpx;
  padding: 0 32rpx;
  height: 88rpx;
  transition: all 0.3s;
}

.amount-input-container.focused {
  background: #fff;
  box-shadow: 0 0 0 2rpx #FF9FB3;
}

.currency-symbol {
  color: #333;
  font-size: 32rpx;
  margin-right: 16rpx;
}

.amount-input {
  flex: 1;
  height: 88rpx;
  background: transparent;
  padding: 0;
  font-size: 32rpx;
  color: #333;
} 