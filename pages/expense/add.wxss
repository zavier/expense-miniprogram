.container {
  padding: 30rpx;
  background: #fff;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}

.picker.placeholder {
  color: #999;
}

.users-select {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.user-tag {
  padding: 10rpx 30rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.user-tag.selected {
  background: #1890ff;
  color: #fff;
}

.textarea {
  width: 100%;
  height: 160rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.form-actions {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
}

.btn-cancel, .btn-submit {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-submit {
  background: #1890ff;
  color: #fff;
} 