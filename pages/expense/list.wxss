/* pages/expense/list.wxss */
.container {
  padding: 16rpx;
  background: #F8F9FD;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.expense-list {
  width: 100%;
  flex: 1;
}

.expense-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 使用淡粉色背景 */
.expense-item {
  background: rgba(255, 159, 179, 0.03);
}

.expense-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.expense-date {
  color: #666;
  font-size: 26rpx;
}

.expense-amount {
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 26rpx;
  color: #333;
  margin-right: 4rpx;
}

.amount {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.expense-content {
  font-size: 26rpx;
}

.expense-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  padding-left: 0;
  position: relative;
}

.label {
  color: #999;
  margin-right: 16rpx;
  width: 140rpx;
  text-align: left;
  flex-shrink: 0;
}

.value {
  color: #333;
  padding-left: 0;
}

.type-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  background: rgba(127, 212, 255, 0.2);
  color: #7FD4FF;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-left: 0;
}

.members-list {
  display: flex;
  align-items: center;
  min-height: 32rpx;
  padding-left: 0;
}

.member-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  align-items: center;
  min-height: 32rpx;
  margin-left: 0;
}

.member-tag {
  padding: 0 12rpx;
  background: rgba(255, 159, 179, 0.2);
  color: #FF9FB3;
  border-radius: 8rpx;
  font-size: 26rpx;
  height: 34rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  line-height: 0.5;
}

.empty-state, .loading {
  text-align: center;
  padding: 48rpx 0;
  color: #999;
  font-size: 28rpx;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-button-container {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
}

.add-button, .share-button {
  flex: 1;
  background: #FF9FB3;
  color: white;
  border: none;
  font-size: 28rpx;
  transition: opacity 0.2s;
}

/* 主按钮样式 */
.add-button {
  background: #FF9FB3;
}

/* 次要按钮样式 */
.share-button {
  background: rgba(255, 159, 179, 0.8);
}

/* 按钮点击效果 */
.add-button:active,
.share-button:active {
  opacity: 0.8;
}

/* 去除按钮的默认边框和高亮效果 */
.add-button::after,
.share-button::after {
  border: none;
}

/* 新增统计部分样式 */
.statistics-section {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  padding: 24rpx 0;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.statistics-header {
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.statistics-header .title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.statistics-header .subtitle {
  font-size: 24rpx;
  color: #999;
}

.member-cards {
  white-space: nowrap;
  padding: 0 24rpx;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
  width: 100%;
}

.member-cards-content {
  display: inline-flex;
  padding-bottom: 24rpx;
  min-width: 100%;
}

.member-card {
  display: inline-block;
  width: 460rpx;
  background: #F8F9FD;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  box-sizing: border-box;
}

.member-card:last-child {
  margin-right: 0;
}

.member-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
}

.stats-item .label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stats-item .value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.stats-item.positive .value {
  color: #52c41a;
}

.stats-item.negative .value {
  color: #ff4d4f;
}

/* 隐藏滚动条但保持可滚动 */
.member-cards::-webkit-scrollbar {
  display: none;
}

/* 编辑按钮样式 */
.expense-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
}

.edit-button {
  background: #FF9FB3;
  color: white;
  border: none;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  height: auto;
  line-height: 1.4;
}

.edit-button::after {
  border: none;
}

.edit-button:active {
  opacity: 0.8;
}