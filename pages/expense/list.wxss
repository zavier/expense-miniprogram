/* pages/expense/list.wxss */
.container {
  padding: 16rpx;
  background: #F8F9FD;
  min-height: 100vh;
}

.expense-list {
  width: 100%;
}

.expense-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.expense-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.expense-date {
  color: #666;
  font-size: 26rpx;
}

.expense-amount {
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 26rpx;
  color: #333;
  margin-right: 4rpx;
}

.amount {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.expense-content {
  font-size: 26rpx;
}

.expense-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  padding-left: 0;
  position: relative;
}

.label {
  color: #999;
  margin-right: 16rpx;
  width: 140rpx;
  text-align: left;
  flex-shrink: 0;
}

.value {
  color: #333;
  padding-left: 0;
}

.type-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  background: rgba(127, 212, 255, 0.1);
  color: #7FD4FF;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-left: 0;
}

.members-list {
  display: flex;
  align-items: center;
  min-height: 32rpx;
  padding-left: 0;
}

.member-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  align-items: center;
  min-height: 32rpx;
  margin-left: 0;
}

.member-tag {
  padding: 0 12rpx;
  background: rgba(255, 159, 179, 0.1);
  color: #FF9FB3;
  border-radius: 8rpx;
  font-size: 26rpx;
  height: 34rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  line-height: 0.5;
}

.empty-state, .loading {
  text-align: center;
  padding: 48rpx 0;
  color: #999;
  font-size: 28rpx;
}