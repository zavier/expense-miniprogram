/* pages/expense/list.wxss */
.container {
  padding: 24rpx;
  background: #F8F9FD;
  min-height: 100vh;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.expense-list {
  width: 100%;
}

.expense-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.expense-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.expense-date {
  color: #666;
  font-size: 28rpx;
}

.expense-amount {
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 24rpx;
  color: #333;
  margin-right: 4rpx;
}

.amount {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.expense-content {
  font-size: 28rpx;
}

.expense-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.label {
  color: #999;
  margin-right: 16rpx;
  min-width: 100rpx;
}

.value {
  color: #333;
  flex: 1;
}

.type-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  background: rgba(127, 212, 255, 0.1);
  color: #7FD4FF;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.members-list {
  display: flex;
  align-items: flex-start;
}

.member-tags {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.member-tag {
  padding: 4rpx 16rpx;
  background: rgba(255, 159, 179, 0.1);
  color: #FF9FB3;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.empty-state, .loading {
  text-align: center;
  padding: 48rpx 0;
  color: #999;
  font-size: 28rpx;
}